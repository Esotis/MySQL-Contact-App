<section class="login d-flex">

    <div class="login-left w-50 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-6">
                <div class="header">
                    <h1>Welcome back</h1>
                    <p>Welcome back! Please enter your details</p>
                </div>
                <form action="/login/signin" method="post" id="userLoginForm" onsubmit="return isValidForm()">
                    <div class="login-form">
                        <div class="container-email">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="Enter your email"
                                data-validation="" name="email">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid email!
                            </div>
                        </div>

                        <div class="container-password">
                            <label for="inputPassword" class="form-label" data-validation="false">Password</label>
                            <div class="input-group" id="password-box">
                                <input type="password" class="form-control" id="inputPassword"
                                    placeholder="Enter your password" data-validation="false" name="password">
                                <span class="input-group-text" id="icon-eye" data-icon="slash"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                                        <path
                                            d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z" />
                                        <path
                                            d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z" />
                                    </svg></span>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Password must containt 1 Uppercase, 1 Symbol, 1 Number, and min-length = 5 characters!
                            </div>
                        </div>

                        <a href="/email"
                            class="text-decoration-none text-center <%- typeof(error) == 'undefined' ? '' : error.errorClass %> "
                            id="displayError">Forgot Password</a>
                        <div class="error-message">
                            <%- typeof(error)=='undefined' ? '' : error.message%>
                        </div>

                        <div class="text-center loading">
                            <div class="position-relative">
                                <button class="signin" id="signin-button" type="submit">Sign In</button>
                                <!-- <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div> -->
                            </div>
                            <span class="d-inline">Don't have an account? <a href="/register"
                                    class="sign-up d-inline">Register
                                    here</a></span>
                        </div>

                    </div>
                </form>

            </div>
        </div>

    </div>

    <div class="login-right w-50 h-100">
        <div class="row align-items-center h-100 w-100 justify-content-center">
            <div class="col-12 p-0">
                <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="3000">
                            <img src="login-slide-1.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item" data-bs-interval="3000">
                            <img src="login-slide-2.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="login-slide-3.jpg" class="d-block w-100" data-bs-interval="3000" alt=" ...">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="/login.js"></script>